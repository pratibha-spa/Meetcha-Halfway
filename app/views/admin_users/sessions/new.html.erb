<div class="devise-form">
  <div><img src="<%= asset_path("meetcha_halfway_logo.png") %>" alt="logo"></div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name),:html => {:class => 'pure-form pure-form-aligned'}) do |f| %>
    <div class="pure-control-group">
      <%= f.email_field :email, autofocus: true , :placeholder=>'Email' %>
    </div>
    <div class="pure-control-group">
      <%= f.password_field :password, autocomplete: "off",:placeholder=>'Password' %>
    </div>
    
      <!--
      <%# if devise_mapping.rememberable? -%>
        <div class="pure-checkbox"><%#= f.check_box :remember_me %> <%#= f.label :remember_me %></div><br>
      <%# end -%>
      -->
      <div class="pure-control-group">
      <%= f.submit "Login", :class=>'pure-button pure-button-primary',:style=>'width:350px;height:35px;' %>
    </div>
  <% end %>

<%= render "devise/shared/links" %>
</div>
